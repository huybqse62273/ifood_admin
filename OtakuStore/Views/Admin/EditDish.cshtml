
@{
    ViewBag.Title = "EditDish";
    Layout = "~/Admin/Views/Share/_LayoutAmin.cshtml";
}
@model OtakuStore.ViewModels.EditDishViewModel


<div id="page-wrapper" class="gray-bg dashbard-1">
    <div class="content-main">

        <!--banner-->
        <div class="banner">
            <h2>
                <a href="/Admin/AdminIndex">Dish</a>
                <i class="fa fa-angle-right"></i>
                <a href="#"><span>Add</span></a>
            </h2>
        </div>
        <!--//banner-->
        <!--grid-->
        <div class="grid-form">
            <!---->
            <div class="grid-form1">
                <div style="margin-left: 200px;"><h3>Edit Dish</h3></div>

                <div class="tab-content">
                    <div class="tab-pane active" id="horizontal-form">
                        <form class="form-horizontal" action="/Admin/EditDishAction/" method="post">
                            <!--Title-->
                            <input type="hidden" name="dish_id" value="@Model.dish.Id"/>
                            <div class="form-group">
                                <label for="focusedinput" class="col-sm-2 control-label">Title</label>
                                <div class="col-sm-8 col-md-8">
                                    <input type="text" class="form-control " name="dish_title" value="@Model.dish.Name" id="focusedinput" required placeholder="Input dish's title">
                                </div>
                            </div>
                            <!--Dish Image-->
                            <div class="form-group">
                                <label for="exampleInputFile" class="col-sm-2 control-label">Dish Image Url</label>
                                <div class="col-sm-8 col-md-8">
                                    <input type="text" class="form-control" name="dish_image" required placeholder="www.google.com/image.png" value="@Model.dish.ImageLink" style="width:50%;">@*accept="image/png, image/jpeg, image/gif"*@
                                    <p class="help-block">add one image for Dish banner</p>
                                </div>
                            </div>
                            <!--Dish Ingredent-->
                            <div class="form-group" id="con">
                                <label for="exampleInputFile" class="col-sm-2 control-label">Dish Ingredient</label>
                                <div class="col-sm-6 col-md-6" id="ingre">
                                    @if (Model.dish.Dish_Ingredient.Any())
                                    {
                                        foreach (var item in Model.dish.Dish_Ingredient)
                                        {
                                            <select name="dish_ingredient">
                                                @foreach (var ingredient in Model.listIngredient)
                                                {
                                                    if (ingredient.Id.Equals(item.IngredientId))
                                                    {
                                                        <option value="@ingredient.Id" selected>@ingredient.Name</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@ingredient.Id">@ingredient.Name</option>
                                                    }

                                                }
                                            </select>
                                            <input type="text" name="dish_ingredient_amount" required value="@item.Amount" placeholder="Amount">
                                        }
                                    }
                                    else
                                    {
                                        <select name="dish_ingredient">
                                            @foreach (var ingredient in Model.listIngredient)
                                            {
                                                <option value="@ingredient.Id">@ingredient.Name</option>
                                            }
                                        </select>
                                        <input type="text" name="dish_ingredient_amount" required value="" placeholder="Amount">
                                    }
                                </div>
                                <button id="btnAddIngredient" type="button" onclick="newIngredient()">More</button>
                            </div>
                            <script>
                                function newIngredient() {
                                    var div = document.getElementById("ingre");
                                    var label = document.createElement("label");
                                    label.className = "col-sm-2";
                                    var cln = div.cloneNode(true);
                                    $("#con").append("<div class='clearfix'> </div>");
                                    $("#con").append(label);
                                    $("#con").append(cln);
                                }
                            </script>
                            <!--Dish Step by step-->
                            <div id="test">
                                <div class="form-group">
                                    <label for="exampleInputFile" class="col-sm-2 control-label">Step by step</label>
                                    <div class="col-sm-8 col-md-8">
                                        @if (Model.dish.StepBySteps.Any())
                                        {
                                            for(var i = 0; i < Model.dish.StepBySteps.Count(); i++)
                                            {
                                                <input type="text" name="dish_step" value="@Model.dish.StepBySteps.ElementAt(i).Description" placeholder="Step @i" id="stepTex">
                                            }
                                            <button id="btnAddStep" type="button" onclick="newStep()">More</button>
                                        }
                                        else
                                        {
                                            <input type="text" name="dish_step" value="" placeholder="Step 1" id="stepTex">
                                            <button id="btnAddStep" type="button" onclick="newStep()">More</button>
                                        }
                                    </div>
                                </div>
                            </div>
                            <script>
                                var countStep = 1;
                                function newStep() {
                                    var cln = $('<input type="text" name="dish_step" value="" placeholder="Step ' + ++countStep +'" id="stepTex">');
                                    console.log(cln);
                                    $("#btnAddStep").before(cln);
                                }
                            </script>
                            <!--Dish Time cooking-->
                            <div class="form-group">
                                <label for="exampleInputFile" class="col-sm-2 control-label">Time cooking</label>
                                <div class="col-sm-8 col-md-8">
                                    <input type="number" name="dish_timecooking" value="@Model.dish.TimeCooking" class="col-sm-2">
                                    <label for="exampleInputFile" class="col-sm-2">Min</label>
                                </div>
                            </div>
                            <!--Dish Tags-->
                            <div>
                                <div class="form-group">
                                    <label for="exampleInputFile" class="col-sm-2 control-label">Tags</label>
                                    <div class="col-sm-8 col-md-8">
                                        @foreach (var tagDish in Model.dish.Course_Dish)
                                        {
                                            <select name="dish_tag" id="tag">
                                                @foreach (var tag in Model.listCourse)
                                                {
                                                    if (tagDish.CourseId.Equals(tag.Id))
                                                    {
                                                        <option value="@tag.Id" selected>@tag.Name</option>
                                                    }
                                                    else
                                                    {
                                                        <option value="@tag.Id">@tag.Name</option>
                                                    }
                                                }
                                            </select>
                                            if (Model.dish.Course_Dish.Last().Id == tagDish.Id)
                                            {

                                            }
                                            else
                                            {
                                                <div class='clearfix'> </div>
                                            }
                                        }
                                        <button id="btnAddTag" type="button" onclick="newTag()">More</button>
                                    </div>
                                </div>
                            </div>
                            <script>
                                var countStep = 1;
                                function newTag() {
                                    var div = document.getElementById("tag");
                                    var cln = div.cloneNode(true);
                                    console.log(cln);
                                    $("#btnAddTag").before("<div class='clearfix'> </div>");
                                    $("#btnAddTag").before(cln);
                                }
                            </script>
                            <!--Dish Category-->
                            <div class="form-group">
                                <label for="exampleInputFile" class="col-sm-2 control-label">Dish Category</label>
                                <div class="col-sm-8 col-md-8">
                                    <select name="dish_category">
                                        @foreach (var category in Model.listCategory)
                                        {
                                            if (Model.dish.Category_Dish.First().CategoryId.Equals(category.Id))
                                            {
                                                <option value="@category.Id" selected>@category.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@category.Id">@category.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                            <!--Description-->
                            <div class="form-group">
                                <label for="txtarea1" class="col-sm-2 control-label">Dish Description</label>
                                <div class="col-sm-8 col-md-8">
                                    <textarea name="dish_description" id="dish_description" cols="100" rows="6" class="form-control "></textarea>
                                    <script>CKEDITOR.replace('dish_description');</script>
                                </div>
                            </div>
                            <!--Publisher-->
                            <div class="form-group">
                                <label for="focusedinput" class="col-sm-2 control-label">Publisher</label>
                                <div class="col-sm-8 col-md-8">
                                    <input type="text" min="0" value="Admin" readonly class="form-control " name="publisher" id="focusedinput" required placeholder="Input name publisher">
                                </div>
                            </div>

                            <div class="panel-footer">
                                <div class="row">
                                    <div class="col-sm-8 col-sm-offset-2">
                                        <button class="btn-primary btn" type="submit">Submit</button>
                                        <button class="btn-inverse btn" type="reset">Reset</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!--//grid-->
                <!---->
                <div class="copy">
                    <p> &copy; 2016 Minimal. All Rights Reserved | Design by <a href="http://w3layouts.com/" target="_blank">W3layouts</a> </p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="clearfix"> </div>
